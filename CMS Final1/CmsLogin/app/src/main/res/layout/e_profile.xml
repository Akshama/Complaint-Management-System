<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/edit">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="georgia"
        android:text="MY PROFILE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/e_eng_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:gravity=""
        android:text="NAME"
        />

    <TextView
        android:id="@+id/e_eng_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e_eng_name"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:text="ID"
        />

    <TextView
        android:id="@+id/e_eng_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/e_eng_id"
        android:layout_below="@+id/e_eng_id"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:text="EMAIL"
       />

    <TextView
        android:id="@+id/e_eng_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/e_eng_name"
        android:layout_below="@+id/e_eng_email"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:text="DEPARTMENT"
       />

</RelativeLayout>